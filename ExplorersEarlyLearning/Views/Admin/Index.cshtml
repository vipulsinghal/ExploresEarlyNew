@model List<ExplorersEarlyLearning.Models.Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

   
    <div class="block" style="position:fixed;">
        <div class="sitemap-panel clearfix">
            <ul class="site-tree">
                        <li class="tree-node active">
                            <div class="map-item  static  ">
                                <a title="Search">Pages</a>
                                <span class="arrow">
                                    <img class="icon arrow-right" src="/Content/Images/treenode/invis.gif">
                                </span>
                            </div>
                            <ul>
                                <li class="tree-node active">
                                    <img class="icon tree-icon" src="/Content/Images/treenode/invis.gif">
                                    @foreach (var menu in ((from topmenu in Model where topmenu.ParentMenuId == null select topmenu).ToList()))
                                    {
                                        <div class="map-item  static  show-in-menu">
                                            <a title="Articles">@menu.Name</a>
                                            <span class="arrow">
                                                <img class="icon arrow-right" src="/Content/Images/treenode/invis.gif">
                                            </span>
                                            <ul style="">
                                                <li class="">
                                                    <a href="/Admin/Edit/@menu.MenuId">Edit</a>                    </li>
                                                @if (@menu.PageType == ExplorersEarlyLearning.Models.PageType.Center || @menu.PageType == ExplorersEarlyLearning.Models.PageType.Program)
                                                { 
                                                    <li class="has-sub"><a href="/Admin/CreateSubPage/@menu.MenuId">Add Sub Page
                                                    </a></li>
                            }
@* <li class="has-sub"><a href="#">New sub page
                            </a>

                                <ul>
                                    <li><a href="#">one_column</a>  </li>
                                    <li><a href="#">two_column</a>  </li>
                                </ul>
                            </li>*@
                                                <li>
                                                    <a data-ajax="POST" data-confirm="Are you sure you want to delete this page?" href="/Admin/Delete/@menu.MenuId">Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                        foreach (ExplorersEarlyLearning.Models.Menu parentmenu in (from menusel in Model
                                                                                   where menusel.ParentMenuId == @menu.MenuId && menusel.IsActive == true
                                                                                   select menusel).ToList())
                        {
                                        <ul>
                                            <li class="tree-node active">
                                                <div class="map-item  static  ">
                                                    <a title="Search">@parentmenu.Name</a>
                                                    <span class="arrow">
                                                        <img class="icon arrow-right" src="/Content/Images/treenode/invis.gif">
                                                    </span>

                                                    <ul style="">

                                                        <li class="">
                                                            <a href="/Admin/Edit/@parentmenu.MenuId">Edit</a>                    </li>
                                                        @*<li class="has-sub"><a href="#">New sub page
                                    </a>

                                        <ul>
                                            <li><a href="#">one_column</a>  </li>
                                            <li><a href="#">two_column</a>  </li>
                                        </ul>
                                    </li>*@
                                                        <li>
                                                            <a data-ajax="POST" class="deletePage" data-confirm="Are you sure you want to delete this page?" href="/Admin/Delete/@parentmenu.MenuId">Delete</a>
                                                        </li>
                                                    </ul>
                                                </div>

                                            </li>
                                        </ul>
                        }
                    }

                                </li>
                            </ul>
                            </li></ul>
        </div>
    </div>
<script>
    $(function () {
        $('.tree-node').treeNode();
        $('.tree-node').mapItem();
    });
</script>