@using Explorers.Web.Infrastructure

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.ContentAdmin("~/Content/css/styleAdmin.css")" rel="stylesheet" type="text/css">
    <link href="@Url.ContentAdmin("~/Content/css/treenode.css")" rel="stylesheet" type="text/css">
    <link href="@Url.ContentAdmin("~/Content/css/zebra_dialog.css")" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
    <script type="text/javascript" src="@Url.ContentAdmin("~/Scripts/admin.js")"></script>
    <script type="text/javascript" src="@Url.ContentAdmin("~/Scripts/treenode.js")"></script>
    <script type="text/javascript" src="@Url.ContentAdmin("~/Scripts/zebra_dialog.js")"></script>
</head>
<body>
    <header id="header">
        <a class="logo" href="/Admin" title="Home">
            Explores Early Learning
        </a>

        @{
            Html.RenderPartial("TopNavigation");
        }

        <ul class="quicklinks">

            <li class="last j_DropDown">
                <a>
                    <img class="icon profile" src="@Url.ContentAdmin("~/Content/Images/invis.gif")">
                    <img class="icon arrow small white-down" src="@Url.ContentAdmin("~/Content/Images/invis.gif")">
                    @WebSecurity.CurrentUserName
                </a>
                <ul style="" class="j_DropDownContent hide">
                    <li>
                        <a href="/Account/ChangePassword">Change password</a>
                    </li>
                    <li>
                        <a href="/Admin/Account/SignOut">Sign out</a>
                    </li>
                </ul>
            </li>
        </ul>
    </header>
    <div style="clear:both;">&nbsp;</div>
        <div id="ex-container" class="clearfix">
         	@RenderBody()
        </div>
        
<!--- footer start here --->

</body>
</html>
