@using Explorers.Web.Areas.Admin.Infrastructure
@model ListPager
<div class="pager">
    @if (Model.CurrentPage > 1)
    {
        <a class="pager-link" pageNo="@(Model.CurrentPage - 1)" href="#">Previous</a>
    }
    @if (Model.StartDisplayedPage > 1)
    {
        <a class="pager-link" pageNo="1" href="#">1</a>
        if (Model.StartDisplayedPage > 2)
        {
        <a class="pager-link" pageNo="@(Model.StartDisplayedPage - 1)" href="#">...</a>
        }
    }
    @for (int i = Model.StartDisplayedPage; i <= Model.EndDisplayedPage; i++)
    {
        if (i == Model.CurrentPage)
        {
        <span class="pager-text">@i</span>
        }
        else
        {
        <a class="pager-link" pageNo="@i" href="#">@i</a>
        }
    }
    @if (Model.EndDisplayedPage < Model.PageCount)
    {
        if (Model.EndDisplayedPage < Model.PageCount - 1)
        {
        <a class="pager-link" pageNo="@(Model.EndDisplayedPage + 1)" href="#" >...</a>
        }
        <a class="pager-link" pageNo="@(Model.PageCount)" href="#" >@Model.PageCount</a>
    }
    @if (Model.CurrentPage < Model.PageCount)
    {
        <a class="pager-link" pageNo="@(Model.CurrentPage + 1)" href="#">Next</a>
    }
</div>
